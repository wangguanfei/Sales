<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="zsgx" namespace="/zsgx" extends="default">
		<!-- 商品 -->
		<action name="goods" class="com.basis.web.action.GoodsAction">
			<result name="goods-index">/jsp/zsgx/goods/index.jsp</result>
			<result name="goods-add">/jsp/zsgx/goods/add.jsp</result>
			<result name="goods-edit">/jsp/zsgx/goods/edit.jsp</result>
			<result name="goods-purchase">/jsp/zsgx/goods/purchase.jsp</result>
		</action>
		<!-- 进货表 -->
		<action name="purchaseRecord" class="com.basis.web.action.PurchaseRecordAction">
			<result name="purchaseRecord-index">/jsp/zsgx/purchaseRecord/index.jsp</result>
			<result name="purchaseRecord-add">/jsp/zsgx/purchaseRecord/add.jsp</result>
			<result name="purchaseRecord-edit">/jsp/zsgx/purchaseRecord/edit.jsp</result>
		</action>
		<!-- 销售记录 -->
		<action name="salesRecord" class="com.basis.web.action.SalesRecordAction">
			<result name="salesRecord-index">/jsp/zsgx/salesRecord/index.jsp</result>
			<result name="salesRecord-add">/jsp/zsgx/salesRecord/add.jsp</result>
			<result name="salesRecord-edit">/jsp/zsgx/salesRecord/edit.jsp</result>
			<result name="goods-sales">/jsp/zsgx/salesRecord/sales.jsp</result>
		</action>
	</package>
</struts>