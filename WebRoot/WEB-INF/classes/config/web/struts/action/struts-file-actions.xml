<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<!-- 文件处理 -->
	<package name="file" namespace="/" extends="default">
		<action name="upload" class="com.basis.web.action.file.UploadAction">
			<interceptor-ref name="defaultStack"></interceptor-ref>
		</action>
		<action name="download" class="com.basis.web.action.file.DownloadAction">
			<interceptor-ref name="defaultStack"></interceptor-ref>
		</action>
		<action name="transfer" class="com.basis.web.action.file.JacobTransferAction">
			<interceptor-ref name="defaultStack"></interceptor-ref>
			<result name="json-callback" type="json">
                <param name="callbackParameter">callback</param>
            </result>
		</action>
	</package>
</struts>